@model IEnumerable<Store>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Store Overview</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                    <thead>
                        <tr>
                                <th class="text-center" scope="col">Store Name</th>
                                <th class="text-center" scope="col">Location</th>
                                <th class="text-center" scope="col">Data Source</th>
                                <th class="text-center" scope="col">Manager</th>
                                <th class="text-center" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var plant in Model)
                        {
                            <tr>
                                    <td class="text-center">@plant.StoreName</td>
                                    <td class="text-center">@plant.Location</td>
                                    <td class="text-center">@plant.DataSource</td>
                                    <td class="text-center">@plant.Manager</td>
                                    <td class="text-center">
                                    <button style="border: none">
                                        <a href="#">Details</a>
                                    </button>
                                    </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>

        </div>
    </div>
</section>