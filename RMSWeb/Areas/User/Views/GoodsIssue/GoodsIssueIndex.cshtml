@model IEnumerable<GoodsIssue>


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Goods Issue Overview</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr >
                                <th class="text-center">Quotation No</th>
                                <th class="text-center">OBD No</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var goodsIssue in Model)
                            {
                                <tr >
                                    <td class="text-center">@goodsIssue.QuotationNo</td>
                                    <td class="text-center">@goodsIssue.OBDNo</td>
                                    <td class="text-center">
                                        @switch (goodsIssue.Status)
                                        {
                                            case SD.StatusPending:
                                                <span class="badge bg-warning">@goodsIssue.Status</span>
                                                break;
                                            case SD.StatusCancelled:
                                                <span class="badge bg-danger">@goodsIssue.Status</span>
                                                break;
                                            case SD.StatusApproved:
                                                <span class="badge bg-success">@goodsIssue.Status</span>
                                                break;
                                            case SD.StatusInProcess:
                                                <span class="badge bg-primary">@goodsIssue.Status</span>
                                                break;
                                            default:
                                                @goodsIssue.Status
                                                break;
                                        }
                                    </td>

                                    <td class="text-center">
                                        <button style="border: none">
                                            <a asp-action="GoodsIssueDetails" asp-route-obdNo="@goodsIssue.OBDNo">Details</a>
                                        </button>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>
