@model IEnumerable<Invoice>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Invoice Overview</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr >
                                <th class="text-start">Invoice No</th>
                                <th class="text-start">OBD No</th>
                                <th class="text-start">Quotation No</th>
                                <th class="text-start">Status</th>
                                <th class="text-start">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td class="text-start">@invoice.InvoiceNo</td>
                                    <td class="text-start">@invoice.OBDNo</td>
                                    <td class="text-start">@invoice.QuotationNo</td>
                                    <td class="text-start">
                                        @switch (invoice.Status)
                                        {
                                            case SD.StatusPending:
                                                <span class="badge bg-warning">@invoice.Status</span>
                                                break;
                                            case SD.StatusCancelled:
                                                <span class="badge bg-danger">@invoice.Status</span>
                                                break;
                                            case SD.StatusApproved:
                                                <span class="badge bg-success">@invoice.Status</span>
                                                break;
                                            case SD.StatusInProcess:
                                                <span class="badge bg-info">@invoice.Status</span>
                                                break;
                                            default:
                                                @invoice.Status
                                                break;
                                        }
                                    </td>

                                    <td class="text-start">
                                        <button style="border: none">
                                            <a asp-action="InvoiceDetails" asp-route-invoiceNo="@invoice.InvoiceNo">Details</a>
                                        </button>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>