    <div class="card good-Receipt overflow-auto">
        <div class="card-body">
            <h5 class="card-title">New Page </h5>
            <div style="width: 100%; overflow-x: auto">
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th>Product</th>
                            <th>Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.Product</td>
                                <td>@item.Quantity</td>
                                <td class="d-flex justify-content-around">
                                    <div>
                                        <button style="font-size:20px; width:30px ;background:green;border:none;color:white ">+</button>
                                        <button style="font-size:20px ; width:30px;background:#c81e1e;border:none;color:white ">-</button>
                                    </div>
                                    <div>
                                        <button class="btn btn-danger btn-sm delete-button" data-id="@item.Id"><i class="bi bi-trash"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="btn-container text-center">
        <a asp-controller="OrderSummary" asp-action="index">
            <button style="border:none; border-radius:3px" class="order-summary-btn bg-success text-light">Order Summay</button>
        </a>

    </div>
</div>